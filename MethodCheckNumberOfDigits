import java.util.Scanner;

public class C11ex2 {

	public static int returneazaNrCifre(int number) {
		int numberOfDigits=0;
		int contor=0;
		while(number!=0) {
			numberOfDigits++;
			number/=10;
			
		}
		return numberOfDigits;
		
	}
		
	public static void main(String[] args) {
	
		Scanner sc=new Scanner(System.in);
		System.out.println("Introdu un numar intreg pentru a afla numarul de cifre");
		int number=sc.nextInt();
		System.out.println("The number " + number + " has " +returneazaNrCifre(number) + " digits");
		
		
	}
	

}
